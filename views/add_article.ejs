<% include ./header %>
    <h1><%= title %></h1>
    <form method="POST" action="/articles/add">
        <div class="form-group">
            <label>Title:</label>
            <input 
                class="form-control"    
                name="title" 
                type="text"/>
        </div>

        <div class="form-group">
            <label>Author:</label>
            <input 
                class="form-control"    
                name="author" 
                type="text"/>
        </div>

        <div class="form-group">
            <label>Body:</label>
            <textarea 
                class="form-control"    
                name="body"></textarea>
        </div>
        <input class="btn btn-primary" type="submit" value="Submit" />
    </form>
<% include ./footer %>
